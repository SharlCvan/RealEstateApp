@foreach (var estate in Estates)
{
    <a href="@($"RealEstate/{estate.Id}")">


        <div class="shadow row mb-5 real-estate-card">

            <div class="col-lg-8 col-md-12 p-0" style="height: 100%;">
                <img src="@estate.ListingURL" class="brightness" style="height: 100%; width:100%;" alt="Picture of house for sale and or rent">
            </div>


            <div class="col-lg-4 col-md-12 p-0">
                <h5 class="ml-3 mt-3 city">@estate.City, @BuyersOptions(estate)</h5>
                <h4 class="mt-2 ml-3" style="font-family: 'Baloo Tammudu 2', cursive; font-size: 35px">@estate.Address</h4>
                <p class="ml-3 mb-4 description">@estate.Description</p>

                @if (estate.CanBeSold)
                {
                    if (estate.SellingPrice is null)
                    {
                        <p class="ml-3 mb-3"><strong>Price:</strong> 0</p>
                    }

                    else
                    {
                        <p class="ml-3 mb-3"><strong>Price:</strong> @string.Format("{0:N} kr", estate.SellingPrice)</p>
                    }
                }

                else
                {
                    if (estate.RentingPrice is null)
                    {
                        <p class="ml-3 mb-3"><strong>Rent:</strong> 0/month</p>
                    }

                    else
                    {
                        <p class="ml-3 mb-3"><strong>Rent:</strong> @string.Format("{0:N} kr", estate.RentingPrice)/month</p>
                    }
                }
                <p class="ml-3 mb-3"><strong>Square footage:</strong> @estate.SquareMeters m²</p>
                <p class="ml-3 mb-3"><strong>Built:</strong> @estate.ConstructionYear</p>
                <p class="ml-3 mb-3"><strong>Rooms:</strong> @estate.Rooms</p>

            </div>
        </div>
    </a>
}