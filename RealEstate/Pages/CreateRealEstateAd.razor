@page "/RealEstateAd"
@inherits BaseCreateRealEstateAd
@attribute [Authorize]


<div class="card-group col-12">
    <EditForm Model="Property" OnValidSubmit="Register" OnInvalidSubmit="InValidRegister" class="card card-body bg-light mt-5 col-md-5 mx-auto">
        <DataAnnotationsValidator />
        <div class="form-group">
            <label for="email" class=" col-form-label">Email:</label>
            <div class="">
                <InputText id="email" class="form-control" @bind-Value="Property.Title" aria-describedby="titleHelp" />
                <small id="titleHelp" class="form-text text-muted">Tip: Use a descriptive title that catches the attetion of the reader</small>
                <ValidationMessage For="@(() => _userForRegistrationDto.Email)" />
            </div>
        </div>
        <div class="form-group">
            <label for="UserName" class="col-form-label">Username:</label>
            <div class="">
                <InputText id="UserName" class="form-control" @bind-Value="_userForRegistrationDto.UserName" aria-describedby="userNameHelp" />
                <small id="userNameHelp" class="form-text text-muted">Username must be between 3-30 characters long.</small>
                <ValidationMessage For="@(() => _userForRegistrationDto.UserName)" />
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-form-label">Password:</label>
            <div class="">
                <InputText type="password" id="password" class="form-control" @bind-Value="_userForRegistrationDto.Password" aria-describedby="passwordHelp" />
                <small id="passwordHelp" class="form-text text-muted">Password must be atleast 6 characters long. Contain an uppercase and lowercase letter as well as a digit.</small>
                <ValidationMessage For="@(() => _userForRegistrationDto.Password)" />
            </div>
        </div>
        <div class="form-group">
            <label for="confirm" class="col-form-label">Confirm Password:</label>
            <div class="">
                <InputText type="password" id="confirm" class="form-control" @bind-Value="_userForRegistrationDto.ConfirmPassword" />
                <ValidationMessage For="@(() => _userForRegistrationDto.ConfirmPassword)" />
            </div>
        </div>
        <div class="form-group">
            <div class="text-left mt-5">
                <button type="submit" class="btn btn-success">Register</button>
                <button @onclick="ClearForm" class="btn btn-danger ml-2">Clear</button>
            </div>
        </div>
    </EditForm>
</div>