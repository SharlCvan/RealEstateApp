@page "/RealEstate/{id}"
@inherits BaseRealEstateDetail
@inject IJSRuntime JsRuntime

@if (string.IsNullOrEmpty(RealEstate.Title))
{
    <div class="spinner"></div>
}
else
{
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xl-8 pb-3">
            @*First card*@
            <div class="card border-dark">
                @*Carousel images*@
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner w-auto">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://images.pexels.com/photos/584399/living-room-couch-interior-room-584399.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://images.pexels.com/photos/349749/kitchen-stove-sink-kitchen-counter-349749.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://images.pexels.com/photos/2101087/pexels-photo-2101087.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="Third slide">
                        </div>
                    </div>
                    <a id="carousel-prev" class="carousel-control-prev" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a id="carousel-next" class="carousel-control-next" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                @*Card body address and price*@
                <div class="card-body">
                    <div class="row border-bottom">
                        <div>
                            <h5 class="card-title">@RealEstate.Address</h5>
                        </div>
                        <div class="ml-auto pr-5">
                            <h5>@RealEstate.SellingPrice:-</h5>
                        </div>
                    </div>
                </div>
                @*Card body Description*@
                <div class="card-body">
                    <div class="row">
                        @*Real estate description*@
                        <div class="border-primary col-sm-6">
                            <p>@RealEstate.Description</p>
                        </div>
                        @*Real estate facts table*@
                        <div class="border-primary col-sm">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th scope="row">Real estate type:</th>
                                        <td>@RealEstate.RealEstateType</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Appeared on market:</th>
                                        <td>@RealEstate.CreatedOn</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Construction year:</th>
                                        <td>@RealEstate.ConstructionYear</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Rent per month:</th>
                                        <td>@RealEstate.RentingPrice:-</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Starting bid:</th>
                                        <td>@RealEstate.SellingPrice:-</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*Second card on row*@
        <div class="col-lg-12 col-xl-4 pb-3">
            <div class="card border-dark">
                <div class="container">
                    <div class="row">
                        <div id="Broker-image" class="col-lg-4 col-xl-6">
                            <img src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80" class="img-fluid" />
                        </div>
                        <div class="col-lg-8 col-xl-6">
                            <h4 class="card-title mt-2">John Johnsson</h4>
                            <p>Email: John@jonsson.se<br />Phone: 0723 932 99</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-3 border-top">
    <div class="row pb-3">
        <div class="w-100 text-center border-bottom">
            <h2>Planlösning</h2>
            <img src="https://images.unsplash.com/photo-1588611911550-22aad4b1485a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1934&q=80" class="img-fluid" />
        </div>
    </div>
    <div class="row">
        <div class="w-100 text-center border-bottom">
            <h2>Karta</h2>
        </div>
    </div>
</div>


    @functions { 

        protected async override Task OnAfterRenderAsync(bool firstRender)
        {
            firstRender = true;

            if (firstRender)
            {
                await JsRuntime.InvokeAsync<object>("initializeCarousel");
                firstRender = false;
            }
        }
        }



}
