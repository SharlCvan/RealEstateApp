@page "/Login"
@page "/Login/{Success}"
@using Microsoft.AspNetCore.Components.Authorization


<div class="col-12 card card-body bg-light mt-5 col-md-4 mx-auto shadow-lg">
    <EditForm Model="_userForAuthentication" OnValidSubmit="ExecuteLogin" class="">
        <DataAnnotationsValidator />
        <div class="form-group">
            <h3>Login</h3>
        </div>

        @if (ShowAuthError)
        {
            <div class="alert alert-danger" role="alert">
                @foreach (var error in Errors)
                {
                    <p>@error</p>
                }
            </div>
        }

        @if (ShowRegistrationMessage)
        {
            <div class="alert alert-success" role="alert">
                <p>@registrationMessage</p>
            </div>
        }

        <div class="form-group">
            <label for="UserName" class="col-form-label">Username:</label>
            <div class="">
                <InputText id="UserName" class="form-control" @bind-Value="_userForAuthentication.UserName" />
                <ValidationMessage For="@(() => _userForAuthentication.UserName)" />
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-form-label">Password:</label>
            <div class="">
                <InputText type="password" id="password" class="form-control" @bind-Value="_userForAuthentication.Password" />
                <ValidationMessage For="@(() => _userForAuthentication.Password)" />
            </div>
        </div>
        <div class="form-group">
            @if (isPosting)
            {
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            }
            else
            {
                <div class="text-left">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            }
        </div>
        <div class="form-group">
            <div class="text-left">
                <a href="registration" class="ml-md-auto">Create a new user</a>
            </div>
        </div>

    </EditForm>
</div>

